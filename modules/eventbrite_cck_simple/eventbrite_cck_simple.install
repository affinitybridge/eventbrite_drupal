// $Id$
// Notify CCK when this module is enabled, disabled, installed, and uninstalled
// so CCK can do any necessary preparation or cleanup.
/**
 * @file
 * Implementation of hook_install().
 */
function eventbrite_cck_simple_install() {
  drupal_load('module', 'content');
  content_notify('install', 'eventbrite_cck_simple');
}

/**
 * Implementation of hook_uninstall().
 */
function eventbrite_cck_simple_uninstall() {
  drupal_load('module', 'content');
  content_notify('uninstall', 'eventbrite_cck_simple');
}

/**
 * Implementation of hook_enable().
 *
 * Notify content module when this module is enabled.
 */
function eventbrite_cck_simple_enable() {
  drupal_load('module', 'content');
  content_notify('enable', 'eventbrite_cck_simple');
}

/**
 * Implementation of hook_disable().
 *
 * Notify content module when this module is disabled.
 */
function eventbrite_cck_simple_disable() {
  drupal_load('module', 'content');
  content_notify('disable', 'eventbrite_cck_simple');
}
